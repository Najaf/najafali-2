<rss xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:media="http://search.yahoo.com/mrss/" version="2.0">
  <channel>
    <title>
      <%=cdata('Ali writing things')%>
    </title>
    <description>
      <%=cdata "Ali's place for writing about things on the internet"%>
    </description>
    <atom:link href="https://najafali.blog/notes/rss/" rel="self" type="application/rss+xml" />
  </channel>
  <% @notes.each do |note| %>
    <item>
      <title><%= cdata note.title %></title>
      <description><%= cdata note.introduction %></description>
      <link>https://najafali.blog/notes/<%= note.slug %></link>
      <dc:creator><%= cdata 'Najaf Ali' %></dc:creator>
      <content:encoded>
        <%= cdata markdown.render(note.body).html_safe %>
      </content:encoded>
    </item>
  <% end %>
</rss>